<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teamnoob.sacstaterideshare">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ActivityLogin"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityRegister"
            android:label="@string/title_activity_register" >
        </activity>
        <activity android:name=".UserProfile"
            android:label="@string/title_activity_user_profile" >
        </activity>
        <activity
            android:name=".ActivityChangePassword"
            android:label="@string/title_activity_change_password">
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:label="Profile" >
        </activity>
        <activity
            android:name=".RatingActivity"
            android:label="Your Rating" >
            <intent-filter>
                <action android:name="com.aleksander.rideshare.RatingActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".searchLanding"
            android:label="@string/title_activity_search_landing"
            android:theme="@style/AppTheme.AppBarOverlay">
        </activity>
        <activity
            android:name=".rtSearch"
            android:label="@string/title_activity_rt_search"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".owSearch"
            android:label="@string/title_activity_ow_search"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>
