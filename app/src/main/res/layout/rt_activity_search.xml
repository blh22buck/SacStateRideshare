<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.teamnoob.sacstaterideshare.rtSearch"
    android:weightSum="100"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/android">

    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:id="@+id/spinner2"
        style="@style/Base.Animation.AppCompat.DropDownUp"
        android:dropDownWidth="match_parent" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:id="@+id/spinner3"
        style="@style/Base.Animation.AppCompat.DropDownUp"
        android:dropDownWidth="match_parent" />

    <Spinner
        style="@style/Base.Animation.AppCompat.DropDownUp"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:id="@+id/spinner4"
        android:dropDownWidth="match_parent"

        />

    <DatePicker
        android:id="@+id/rtDatePicker"
        android:layout_width="wrap_content"
        android:layout_height="106dp" />

    <Button
    android:id="@+id/toTimeButton"
    android:layout_width="249dp"
    android:layout_height="wrap_content"
    android:text="Set To School time"
        />

    <TextView
        android:id="@+id/toTimeSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To School time set: "
        android:textAppearance="?android:attr/textAppearanceLarge" />



    <DatePicker
        android:id="@+id/rtDatePicker2"
        android:layout_width="wrap_content"
        android:layout_height="101dp" />

    <Button
        android:id="@+id/fromTimeButton"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:text="Set From School time"
        />

    <TextView
        android:id="@+id/fromTimeSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From School time set: "
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <Button android:id="@+id/search_execute_button"
        style="?android:textAppearanceSmall"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/abc_searchview_description_search"
        android:textStyle="bold"
        android:layout_gravity="right" />



</LinearLayout>
