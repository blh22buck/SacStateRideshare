<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.teamnoob.sacstaterideshare.searchLanding"
    android:background="@drawable/android">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search_username"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textIsSelectable="false"
        android:hint="Enter Username to Search"
        android:inputType="text"
        android:imeOptions="actionSend"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:text="One Way"
        android:id="@+id/oneWay_button"
        android:layout_below="@+id/search_username"
        android:layout_marginTop="97dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:typeface="sans" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:text="Round Trip"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/oneWay_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:typeface="sans"
        android:id="@+id/roundTrip_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter a Username above or Select from an option below"
        android:id="@+id/tellUser"
        android:layout_below="@+id/search_username"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
