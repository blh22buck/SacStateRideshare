<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rideshare.OneWaySearchActivity">

    <TextView
        android:id="@+id/roundtripTextView"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:text="One Way"

        android:textAlignment="center"
        android:typeface="monospace"
        android:textSize="40sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:elegantTextHeight="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toFromSwitch"
        android:layout_below="@+id/roundtripTextView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="false"
        android:textOff="To School"
        android:textOn="From School"
        android:textSize="20sp"
        android:layout_marginTop="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fromHeader"
        android:layout_below="@+id/roundtripTextView"
        android:layout_toStartOf="@+id/toFromSwitch"
        android:textColor="@color/colorAccent"
        android:textStyle="italic"
        android:textAllCaps="true"
        android:textSize="25sp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="25dp" />

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/linearLayout1"
        android:layout_below="@+id/fromHeader"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp">

        <EditText android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="1"
            android:id="@+id/txtDate">
            <requestFocus></requestFocus>
        </EditText>
        <Button android:layout_height="wrap_content"
            android:layout_weight="0" android:id="@+id/btnDate" android:text="Date"
            android:layout_width="100dp">

        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/linearLayout1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/txtTime" />

        <Button
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:id="@+id/btnTime"
            android:text="Time"
            android:layout_width="100dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location: Zip "
        android:id="@+id/textView4"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editZip"
        android:layout_below="@+id/linearLayout"
        android:layout_toEndOf="@+id/textView4"
        android:hint="ex: 95628"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Search"
        android:id="@+id/oneWayExecute"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/toFromSwitch"
        android:layout_marginBottom="41dp"
        android:layout_toEndOf="@+id/editZip" />

</RelativeLayout>
